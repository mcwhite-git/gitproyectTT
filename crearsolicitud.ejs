  <main class="content">
    <div class="container-fluid p-0 my-4">
      <div class="row mb-2 mb-xl-3">
        <div class="col-auto d-none d-sm-block">
          <h3>Crear <strong>Solicitud</strong></h3>
        </div>
      </div>
    </div>

    <!--formulario para agregar usuarios-->
    <div class="container mt-4 ">
      <div class="card border-secundary">
        <div class="card-body">
          <div class="col-auto d-none d-sm-block">
            <h5>Crear <strong>Solicitud</strong></h5>
          </div>
          
            <form action="" method="POST" class="needs-validation form-editar my-4">
              <input name="id_usuario" id="id_usuario" value="" hidden>
              <div class="mb-3">
                <div class="row my-2">
                  <div class="col">
                    <label for="validationCustom01" class="form-label">Descripción</label>
                    <input type="text" class="form-control" id="validationCustom01" name="descripcion" tabindex="4"
                      value="" required>
                  </div>
                  <div class="col">
                    <label for="validationCustom01" class="form-label">Resumen</label>
                    <input type="text " class="form-control" id="validationCustom01" name="resumen"
                      value="" tabindex="5" required>
                  </div>
                  <div class="col">
                    <label for="validationCustom01" class="form-label">Fecha</label>
                    <input type="datetime" class="form-control" id="validationCustom01" name="fecha" tabindex="6"
                      value="" required>
                  </div>                  
                </div>
                <div class="row my-2">
                  <div class="col-4 my-2">
                    <label for="validationCustom04" class="form-label">UEB</label>
                    <select name="ueb" id="validationCustom04" class="form-select" tabindex="7" required>
                      <option selected disabled value="">...</option>
                      <option>Guayos</option>
                      <option>Sancti Spíritus</option>
                      <option>Jatibonico</option>
                      <option>Arrollo Blanco</option>
                      <option>Perea</option>
                      <option>Zaza</option>
                    </select>
                  </div> 
                  <div class="col col-4">
                    <label for="validationCustom01" class="form-label">Estado</label>
                    <input type="text" class="form-control" id="validationCustom01" name="estado" tabindex="3"
                      value="" required>
                  </div>            
                </div>
                <button type="submit" class="btn btn-outline-success my-4" id="editar" tabindex="11" data-toggle="tooltip" title="Guardar el usuario"><i class='bx bxs-save'></i>Guardar</button>
                <a href="/mostrarusuarios" class="btn btn-outline-secondary" data-toggle="tooltip" title="Regresar"><i class='bx bxs-x-square' ></i>Cancelar</a>
            </form>             
           
        </div>
      </div>
    </div>
  </main>
  

