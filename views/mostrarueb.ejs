<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>SoliPrEs</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link rel="shortcut icon" href="img/icons/icon-48x48.png" />
    <link href="../img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
        rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="../css/bootstrap.min.css" rel="stylesheet">
    <link href="../vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="../css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link href="../css/select.bootstrap5.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="../css/style.css" rel="stylesheet">


</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top">
        <div class="container d-flex align-items-center justify-content-between">

            <h1 class="logo"><a href="/index">SoliPrEs</a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html" class="logo"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto active" href="/index">Inicio</a></li>
                    <li class="dropdown"><a href="#"><span>Servicios</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a href="/crearsolicitud">Solicitudes</a></li>
                            <li><a href="/asignarpresupuesto">Presupuesto</a></li>
                            <li><a href="#">Estadística</a></li>
                            <li class="dropdown"><a href="#"><span>Administrar</span> <i
                                        class="bi bi-chevron-right"></i></a>
                                <ul>
                                    <li><a href="/mostrarusuarios">Usuarios</a></li>
                                    <li><a href="/mostrarueb">UEB</a></li>
                                    <li><a href="/mostrarproductos">Productos</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <li><a class="nav-link scrollto" href="#">Contáctenos</a></li>
                    <% if (login) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button"
                                aria-expanded="false">Bienvenido: <strong>
                                    <%= nombre %>
                                </strong> </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="">Preferencias</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="/salir">Salir</a></li>
                            </ul>
                        </li>
                        <% } else { %>
                            <li><a class="getstarted scrollto" href="/login">Autenticarse</a></li>
                            <% } %>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->

    <main class="content">
        <div class="container-fluid p-0 my-4">
            <div class="row mb-2 mb-xl-3">
                <div class="col-auto d-none d-sm-block">
                    <h3>Mostrar <strong>UEB</strong></h3>
                </div>

            </div>
        </div>
        <!--formulario para agregar usuarios-->
        <div class="container mt-4">
            <div class="card border-secundary">
                <div class="card-body">
                    <div class="col-auto d-none d-sm-block">
                        <h5>Mostrar <strong>UEB</strong></h5>
                    </div>
                    <a href="/formcrearueb" class="btn btn-outline-success my-4" data-toggle="tooltip"
                        title="Agregar uan UEB"><i class='bx bxs-plus-square'></i>Agregar</a>
                    <table id="stilotableueb" class="table table-striped table-bordered">
                        <thead>
                            <tr class="bg-secondary text-white">
                                <th>Nombre</th>
                                <th>Dirección</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% results.forEach((ueb)=>{ %>
                                <tr>
                                    <td>
                                        <%= ueb.nombre %>
                                    </td>
                                    <td>
                                        <%= ueb.direccion %>
                                    </td>
                                    <td>
                                        <a href="/editarueb/<%= ueb.id_ueb %>" class="btn btn-outline-success btn-sm"
                                            data-toggle="tooltip" title="Editar la UEB"><i
                                                class='bx bxs-edit'></i>Editar</a>
                                        <a onclick="confirm(<%= ueb.id_ueb %>) " class="btn btn btn-outline-danger btn-sm"
                                            id="form-eliminar" data-toggle="tooltip" title="Eliminar la UEB"><i
                                                class='bx bxs-minus-square'></i>Eliminar</a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <main>

            <div class="container d-md-flex py-4">

                <div class="me-md-auto text-center text-md-start">
                    <div class="copyright justify-content-center">
                        &copy; Copyright <strong><span>Grupo de Desarrollo</span></strong>. Todos los derechos
                        reservados.
                    </div>

                </div>

            </div>
            </footer><!-- End Footer -->



            <!-- Vendor JS Files -->            
            <script src="../js/app.js"></script>      
            <script src="../js/jquery-3.5.1.js"></script>     
            <script src="../js/jquery.dataTables.min.js"></script>
            <script src="../js/dataTables.bootstrap5.min.js"></script>      
            <script src="../js/dataTables.select.min.js"></script>      
            <script src="../js/sweetalert2/dist/sweetalert2.all.min.js"></script>


            <script>
                $(document).ready(function () {
                  $('#stilotableueb').DataTable({
                    select:true,
                    "language": {
                      "lengthMenu": "Mostrar _MENU_ registros por página",
                      "zeroRecords": "Nada encontrado - Lo siento",
                      "info": "Mostrando la página _PAGE_ de _PAGES_",
                      "infoEmpty": "No se encontraron registros",
                      "infoFiltered": "(Filtrado de _MAX_ registros totales)",
                      'search': "Buscar:",
                      'paginate': {
                        'next': 'Siguiente',
                        'previous': 'Anterior'
                      }
                    }
                  });
                });
              </script>
            <!-- Template Main JS File -->
            <script src="../js/main.js"></script>
            <script>
                function confirm(id) {
                    Swal.fire({
                        title: 'Estás seguro que deseas eliminar la UEB?',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Eliminar'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location = 'deleteueb/' + id;
                        }
                    })
                }
            </script>

</body>

</html>