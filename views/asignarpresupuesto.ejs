
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>SoliPrEs</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link rel="shortcut icon" href="img/icons/icon-48x48.png" />
  <link href="../img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link
    href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
    rel="stylesheet">

  <!-- Vendor CSS Files -->

  <link href="../css/bootstrap.min.css" rel="stylesheet">
  <link href="../vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="../css/dataTables.bootstrap5.min.css" rel="stylesheet">
  <link href="../css/select.bootstrap5.min.css" rel="stylesheet">
  <link href="../css/bootstrap-datetimepicker.css" rel="stylesheet">
  <link href="../css/bootstrap-datetimepicker.min.css" rel="stylesheet">


  <!-- Template Main CSS File -->
  <link href="../css/style.css" rel="stylesheet">

  <style>

  </style>
</head>

<body>

  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top">
    <div class="container d-flex align-items-center justify-content-between">

      <h1 class="logo"><a href="/index">SoliPrEs</a></h1>
      <!-- Uncomment below if you prefer to use an image logo -->
      <!-- <a href="index.html" class="logo"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

      <nav id="navbar" class="navbar">
        <ul>
          <li><a class="nav-link scrollto active" href="/index">Inicio</a></li>
          <li class="dropdown"><a href="#"><span>Servicios</span> <i class="bi bi-chevron-down"></i></a>
            <ul>
              <li><a href="/crearsolicitud">Solicitudes</a></li>
              <li><a href="/asignarpresupuesto">Presupuesto</a></li>
              <li><a href="#">Estadística</a></li>
              <% if(login && rol==="Administrador" ) { %>
                <li class="dropdown"><a href="#"><span>Administrar</span> <i class="bi bi-chevron-right"></i></a>
                  <ul>
                    <li><a href="/mostrarusuarios">Usuarios</a></li>
                    <li><a href="/mostrarueb">UEB</a></li>
                    <li><a href="/mostrarproductos">Productos</a></li>
                  </ul>
                </li>
                <% } %>
            </ul>
          </li>
          <li><a class="nav-link scrollto" href="#">Contáctenos</a></li>
          <% if (login) { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button"
                aria-expanded="false">Bienvenido: <strong>
                  <%= nombre %>
                </strong> </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="">Preferencias</a></li>
                <li>
                  <hr class="dropdown-divider">
                </li>
                <li><a class="dropdown-item" href="/salir">Salir</a></li>
              </ul>
            </li>
            <% } else { %>
              <li><a class="getstarted scrollto" href="/login">Autenticarse</a></li>
              <% } %>
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav><!-- .navbar -->

    </div>
  </header><!-- End Header -->

  <main class="content">
    <div class="container-fluid p-0 my-4">
      <div class="row mb-2 mb-xl-3">
        <div class="col-auto d-none d-sm-block">
          <h3>Asignar <strong>Presupuesto</strong></h3>
        </div>
      </div>
    </div>


    <!--formulario para agregar presupuestos-->
    <div class="container mt-4 ">
      <div class="card border-secundary">
        <div class="card-body">


          <div class="container mt-4 ">
            <div class="card border-secundary">
              <div class="card-body">
                <div class="col-auto d-none d-sm-block">
                  <h5>Asignar <strong>Presupuesto</strong></h5>
                </div>

                <form action="/asignarpresupuesto" method="POST" class="needs-validation form-editar my-4">
                  <input name="id_presupuesto" id="id_presupuesto" value="" hidden>
                  <div class="mb-3">
                    <div class="row my-2">
                      <div class="col">
                        <label for="validationCustom04" class="form-label">UEB</label>
                        <select name="id_ueb" id="validationCustom04" class="form-select" tabindex="7" required>
                          <option selected disabled value="">...</option>
                          <option value="1">Alfredo López Brito (Bauzá</option>
                          <option value="2">José A. García Borroto (Zaza)</option>
                          <option value="3"> Pedro Larrea Mustelier (S.S)</option>
                          <option value="4">Alberto Mansito Doble (Taguasco)</option>
                          <option value="5">Piro Guínart Díaz (Trinidad)</option>
                          <option value="6">Eladio Rodrígeuz Méndez (Fomento)</option>
                          <option value="7">José González Treche (Guayos)</option>
                          <option value="8">Serafín Sánchez Valdivia (Arroyo Blanco)</option>
                          <option value="9">Roberto Rodríguez Fernández (Perea)</option>
                          <option value="10">Néstor Rodríguez Pérez (Jatibonico)</option>
                        </select>
                      </div>

                      <div class="col">
                        <label for="validationCustom01" class="form-label">Fecha</label>
                        <div class="dates">
                          <input type="text" class="form-control" id="usr1" name="fecha" placeholder="DD-MM-YYYY"
                            autocomplete="off">
                        </div>
                      </div>
                      <div class="col">
                        <label for="validationCustom01" class="form-label">Componente MN</label>
                        <input type="text" class="form-control" id="validationCustom01" name="cmpmn" value=""
                          tabindex="5" required>
                      </div>
                      <div class="col">
                        <label for="validationCustom01" class="form-label">Componente CL</label>
                        <input type="text" class="form-control" id="validationCustom01" name="cmpcl" tabindex="6"
                          value="" required>
                      </div>
                    </div>

                    <button type="submit" class="btn btn-outline-success my-4" id="editar" tabindex="11"
                      data-toggle="tooltip" title="Asignar presupuesto a la UEB"><i
                        class='bx bxs-save'></i>Asignar</button>
                </form>
              </div>
            </div>
          </div>
          <div class="container mt-4 ">
            <div class="card border-secundary">
              <div class="card-body">
                <div class="col-auto d-none d-sm-block">
                  <h5>Mostrar <strong>Presupuesto</strong></h5>
                </div>
                <table id="presupuesto" class="table table-striped table-bordered" style="width:100%">
                  <thead>
                    <tr class="bg-secondary text-white">
                      <th>UEB</th>
                      <th>Fecha</th>
                      <th>Componente MN</th>
                      <th>Componente CL</th>
                      <th>Acciones</th>
                    </tr>
                  </thead>
                  <tbody>
                <% results.forEach((presupuesto)=>{ %>
                <tr>
                  <td>
                    <%= presupuesto.uebid_ueb %>
                  </td>
                  <td>
                    <%= presupuesto.fecha %>
                  </td>
                  <td>
                    <%= presupuesto.cmpmn %>
                  </td>
                  <td>
                    <%= presupuesto.cmpcl %>
                  </td>
                  <td>
                    <a href="/editarpresupuesto/<%= presupuesto.id_presupuesto %>" class="btn btn-outline-success btn-sm"
                      data-toggle="tooltip" title="Editar el presupuesto"><i class='bx bxs-edit'></i>Editar</a>
                    <a onclick="confirm(<%= presupuesto.id_presupuesto %>) " class="btn btn btn-outline-danger btn-sm"
                      id="form-eliminar" data-toggle="tooltip" title="Eliminar el presupuesto"><i
                        class='bx bxs-minus-square'></i>Eliminar</a>
                  </td>
                </tr>
                <% }) %>
                  </tbody>
                </table>

              </div>
            </div>
          </div>
  </main>
  <div class="container d-md-flex py-4">

    <div class="me-md-auto text-center text-md-start">
      <div class="copyright justify-content-center">
        &copy; Copyright <strong><span>Grupo de Desarrollo</span></strong>. Todos los derechos reservados.
      </div>
    </div>
  </div>
  </footer><!-- End Footer -->
