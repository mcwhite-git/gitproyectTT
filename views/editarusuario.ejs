</head>

<body>

  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top">
    <div class="container d-flex align-items-center justify-content-between">

      <h1 class="logo"><a href="/index">SoliPrEs</a></h1>
      <!-- Uncomment below if you prefer to use an image logo -->
      <!-- <a href="index.html" class="logo"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

      <nav id="navbar" class="navbar">
        <ul>
          <li><a class="nav-link scrollto active" href="/index">Inicio</a></li>
          <li class="dropdown"><a href="#"><span>Servicios</span> <i class="bi bi-chevron-down"></i></a>
            <ul>              
              <li><a href="/crearsolicitud">Solicitudes</a></li>
              <li><a href="/asignarpresupuesto">Presupuesto</a></li>
              <li><a href="#">Estadística</a></li>
              <li class="dropdown"><a href="#"><span>Administrar</span> <i class="bi bi-chevron-right"></i></a>
                <ul>
                  <li><a href="/mostrarusuarios">Usuarios</a></li> 
                  <li><a href="/mostrarueb">UEB</a></li>  
                  <li><a href="/mostrarproductos">Productos</a></li> 
                </ul>
              </li>
            </ul>
          </li>
          <li><a class="nav-link scrollto" href="#">Contáctenos</a></li>
          <% if (login) { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button"
                aria-expanded="false">Bienvenido: <strong>
                  <%= nombre %>
                </strong> </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="">Preferencias</a></li>
                <li>
                  <hr class="dropdown-divider">
                </li>
                <li><a class="dropdown-item" href="/salir">Salir</a></li>
              </ul>
            </li>
            <% } else { %>
              <li><a class="getstarted scrollto" href="/login">Autenticarse</a></li>
              <% } %>
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav><!-- .navbar -->

    </div>
  </header><!-- End Header -->

  <main class="content">
    <div class="container-fluid p-0 my-4">
      <div class="row mb-2 mb-xl-3">
        <div class="col-auto d-none d-sm-block">
          <h3>Agregar <strong>Usuarios</strong></h3>
        </div>

      </div>
    </div>
    <!--formulario para agregar usuarios-->
    <div class="container mt-4 ">
      <div class="card border-secundary">
        <div class="card-body">
          <div class="col-auto d-none d-sm-block">
            <h5>Editar <strong>Usuarios</strong></h5>
          </div>
          <% if(usuario) { %>
            <form action="/update" method="POST" class="needs-validation form-editar my-4">
              <input name="id_usuario" id="id_usuario" value="<%= usuario.id_usuario %>" hidden>
              <div class="mb-3">
                <div class="row my-2">
                  <div class="col">
                    <label for="validationCustom01" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="validationCustom01" name="nombre" tabindex="4"
                      value="<%= usuario.nombre %>" required>
                  </div>
                  <div class="col">
                    <label for="validationCustom01" class="form-label">1er Apellido</label>
                    <input type="text" class="form-control" id="validationCustom01" name="primer_apellido"
                      value="<%= usuario.primer_apellido %>" tabindex="5" required>
                  </div>
                  <div class="col">
                    <label for="validationCustom01" class="form-label">2do Apellido</label>
                    <input type="text" class="form-control" id="validationCustom01" name="segundo_apellido" tabindex="6"
                      value="<%= usuario.segundo_apellido %>" required>
                  </div>                  
                </div>
                <div class="row my-2">
                  <div class="col col-4">
                    <label for="validationDefaultUsername" class="form-label">Usuario</label>
                    <input type="text" class="form-control" id="validationDefaultUsername" name="usuario" tabindex="2"
                      value="<%= usuario.usuario %>" required>
                  </div> 

                  <div class="col col-4">
                    <label for="validationCustom01" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="validationCustom01" name="contrasena" tabindex="3"
                      value="" >
                  </div>
                   
                  <div class="col col-2">
                    <label for="validationCustom01" class="form-label">CI</label>
                    <input type="text" class="form-control" id="validationCustom01" name="CI" tabindex="1"
                      value="<%= usuario.CI %>" required>
                  </div>                      
                </div>
               
                
                <div class="col-4 my-2">
                  <label for="validationCustom04" class="form-label">Cargo</label>
                  <select name="cargo" id="validationCustom04" class="form-select" tabindex="7" required>
                    <option selected disabled value="">...</option>
                    <option <%=usuario.cargo=='Informático' ? "selected" : '' %> value="Informático">Informático</option>
                    <option <%=usuario.cargo=='Logístico' ? "selected" : '' %> value="Logístico">Logístico</option>
                    <option <%=usuario.cargo=='DirEconómico' ? "selected" : '' %> value="DirEconómico">Dir. Económico
                    </option>
                    <option <%=usuario.cargo=='EconómicoUEB' ? "selected" : '' %> value="EconómicoUEB">Económico UEB
                    </option>
                    <option <%=usuario.cargo=='DirectorEMP' ? "selected" : '' %> value="DirectorEMP">Director Emp
                    </option>
                    <option <%=usuario.cargo=='DirUEB' ? "selected" : '' %> value="DirUEB">Dir. UEB</option>
                  </select>
                </div>
                <div class="col-4 my-2">
                  <label for="validationCustom04" class="form-label">Rol</label>
                  <select name="rol" id="validationCustom04" class="form-select" tabindex="8" required>
                    <option selected disabled value="">...</option>
                    <option <%=usuario.rol=='Administrador' ? "selected" : '' %> value="Administrador" >Administrador
                    </option>
                    <option <%=usuario.rol=='Logístico' ? "selected" : '' %> value="Logístico">Logístico</option>
                    <option <%=usuario.rol=='DirEconómico' ? "selected" : '' %> value="DirEconómico">Dir. Económico
                    </option>
                    <option <%=usuario.rol=='DirEconómico' ? "selected" : '' %> value="EconómicoUEB">Económico UEB
                    </option>
                    <option <%=usuario.rol=='DirEconómico' ? "selected" : '' %> value="DirectorEMP">Director Emp
                    </option>
                    <option <%=usuario.rol=='DirEconómico' ? "selected" : '' %> value="DirUEB">Dir. UEB</option>
                  </select>
                </div>
                 
                
                <button type="submit" class="btn btn-outline-success my-4" id="editar" tabindex="11" data-toggle="tooltip" title="Guardar el usuario"><i class='bx bxs-save'></i>Guardar</button>
                <a href="/mostrarusuarios" class="btn btn-outline-secondary" data-toggle="tooltip" title="Regresar"><i class='bx bxs-x-square' ></i>Cancelar</a>
            </form>             
            <% } %>
        </div>
      </div>
    </div>
  </main>
  <!-- Ventana modal cambiar contraseña -->
  <div class="modal fade" id="cambiarcontraseña" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Cambiar Contraseña</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/cambiarpassw" method="POST">
            <div class="mb-3">
              <input type="password" class="form-control" id="passanterior" value="passanterior" aria-describedby="" placeholder="Anterior">
            </div>
            <div class="mb-3">
              <input type="password" class="form-control" id="passnueva" value="passnueva" placeholder="Nueva">
            </div> 
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Carrar</button>
          <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Fin modal -->

  <div class="container d-md-flex py-4">

    <div class="me-md-auto text-center text-md-start">
      <div class="copyright justify-content-center">
        &copy; Copyright <strong><span>Grupo de Desarrollo</span></strong>. Todos los derechos reservados.
      </div>

    </div>

  </div>
  </footer><!-- End Footer -->

